{% extends 'base.html.twig' %}

{% block title %}Sessions
{% endblock %}

{% block body %}
	<div class="w-full">
		<div class="mb-4 mx-0">
			<div class="shadow-lg rounded-2xl px-8 py-4 bg-white dark:bg-gray-700 w-full">
				<div class="flex items-center justify-between">
					<h1 class="text-2xl font-bold text-gray-700 dark:text-white">{{ user.firstname }} {{ user.lastname }}</h1>
					<a class="text-sm font-bold text-indigo-500 transition-colors duration-200 transform rounded cursor-pointer hover:text-indigo-900" href="{{ path('profile_edit') }}">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</div>

	{% for session in lastSessions %}
		<div class="w-full sm:w-1/2">
			{% include 'session/single.html.twig' with {'edit': false} %}
		</div>
	{% endfor %}
{% endblock %}
