<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('tailwind') }}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<div class="flex max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-indigo-800 lg:max-w-4xl">
				<div class="hidden bg-cover lg:block lg:w-1/2" style="background-image:url('https://images.unsplash.com/photo-1606660265514-358ebbadc80d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1575&q=80')"></div>
				<div class="w-full px-6 py-8 md:px-8 lg:w-1/2">
					<h2 class="text-2xl font-semibold text-center text-indigo-700 dark:text-white">Growup</h2>
					<p class="text-xl text-center text-indigo-600 dark:text-indigo-200">Welcome back!</p>
					<form action="{{ path('login') }}" method="post">
						<div class="mt-4">
							<label class="block mb-2 text-sm font-medium text-indigo-600 dark:text-indigo-200" for="username">Email Address</label>
							<input class="block w-full px-4 py-2 text-indigo-700 bg-white border rounded-md dark:bg-indigo-800 dark:text-indigo-300 dark:border-indigo-600 focus:border-indigo-500 dark:focus:border-indigo-500 focus:outline-none focus:ring" type="email" id="username" name="_username" value="{{ last_username }}">
						</div>
						<div class="mt-4">
							<div class="flex justify-between">
								<label class="block mb-2 text-sm font-medium text-indigo-600 dark:text-indigo-200" for="password">Password</label>
								<a href="#" class="text-xs text-indigo-500 dark:text-indigo-300 hover:underline">Forget Password?</a>
							</div>
							<input class="block w-full px-4 py-2 text-indigo-700 bg-white border rounded-md dark:bg-indigo-800 dark:text-indigo-300 dark:border-indigo-600 focus:border-indigo-500 dark:focus:border-indigo-500 focus:outline-none focus:ring" type="password" id="password" name="_password">
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="mt-8">
							<button class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-indigo-700 rounded hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600" type="submit">
								Login
							</button>
						</div>
					</form>
				</div>
			</div>
		{% endblock %}
	</body>
</html>
