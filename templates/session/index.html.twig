{% extends 'base.html.twig' %}

{% block title %}Sessions
{% endblock %}

{% block body %}
	<div class="w-full">
		<div class="flex flex-row-reverse mb-4 mr-4 mx-0">
			<a class="shadow-lg p-2 rounded-full bg-indigo-500 text-white hover:bg-indigo-900" href="{{ path('session_new') }}">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
				</svg>
			</a>
		</div>
	</div>
	{% for session in sessions %}
		<div class="w-full sm:w-1/2">
			<div class="mb-4 mx-0 sm:ml-4 xl:mr-4">
				<div class="shadow-lg rounded-2xl px-8 py-4 bg-white dark:bg-gray-700 w-full">
					<div class="flex items-center justify-between">
						<span class="text-sm font-light text-gray-600 dark:text-gray-400">{{ session.start|date('l m, Y') }}</span>
						<a class="text-sm font-bold text-indigo-500 transition-colors duration-200 transform rounded cursor-pointer hover:text-indigo-900" href="{{ path('session_edit', {'id': session.id}) }}">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
							</svg>
						</a>
					</div>

					<div class="mt-2">
						<a href="{{ path('session_edit', {'id': session.id}) }}" class="text-2xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline">{{ session.title }}</a>
						<p class="mt-2 text-gray-600 dark:text-gray-300">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Tempora expedita dicta totam aspernatur doloremque. Excepturi iste iusto eos enim reprehenderit nisi, accusamus delectus nihil quis facere in modi ratione libero!</p>
					</div>

					<div class="flex items-center justify-between mt-4">
						<div class="flex items-center">
							{% for i in 1..5 %}
								{% set color = (session.mood >= i ? "text-indigo-500" : "text-gray-300")  %}
								<span class="{{ color }}">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
									</svg>
								</span>
							{% endfor %}
						</div>

						<div class="flex items-center">
							<img class="hidden object-cover w-10 h-10 mx-4 rounded-full sm:block" src="https://images.unsplash.com/photo-1502980426475-b83966705988?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=40&q=80" alt="avatar">
							<a class="font-bold text-gray-700 cursor-pointer dark:text-gray-200">Khatab wedaa</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
