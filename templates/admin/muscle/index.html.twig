{% extends 'base.html.twig' %}

{% block title %}Muscles{% endblock %}

{% block body %}
	<div class="w-full">
		<div class="flex flex-row-reverse mb-4 mr-4 mx-0">
			<a class="shadow-lg p-2 rounded-full bg-indigo-500 text-white hover:bg-indigo-900" href="{{ path('muscle_new') }}">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
				</svg>
			</a>
		</div>
	</div>

    {% for muscle in muscles %}
        <div class="w-full sm:w-1/3">
			<div class="mb-4 mx-0 sm:ml-4 xl:mr-4">
				<div class="shadow-lg rounded-2xl px-8 py-4 bg-white dark:bg-gray-700 w-full">
					<div class="flex items-center justify-between">
                        <a href="" class="text-2xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline">{{ muscle.name }}</a>
                        <a class="text-sm font-bold text-indigo-500 transition-colors duration-200 transform rounded cursor-pointer hover:text-indigo-900" href="{{ path('muscle_edit', {'id': muscle.id}) }}">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
							</svg>
						</a>
                    </div>
                </div>
            </div>
        </div>        
    {% endfor %}
{% endblock %}
